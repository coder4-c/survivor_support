# Salama Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
# For local development
MONGODB_URI=mongodb://localhost:27017/safe_circle

# For MongoDB Atlas (replace with your actual connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/safe_circle

# JWT Configuration (generate secure 64-character hex secret)
JWT_SECRET=your-super-secret-jwt-key-64-characters-long
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (for future use)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=safe-circle@yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Encryption Configuration (generate secure 32-byte hex key)
ENCRYPTION_KEY=your-32-byte-encryption-key-in-hex
EVIDENCE_ENCRYPTION_ALGO=aes-256-cbc

# Emergency Configuration
EMERGENCY_HOTLINE=+1-800-XXX-XXXX
CRISIS_HOTLINE=+1-800-XXX-XXXX
ADMIN_EMAIL=admin@safecircle.org