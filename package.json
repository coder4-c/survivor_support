{
  "name": "survivor-support",
  "version": "1.0.0",
  "description": "Survivor Support Platform - Full Stack App (Frontend + Backend on Vercel)",
  "main": "api/index.js",
  "scripts": {
    "build": "cd frontend-main && npm run build",
    "start": "node api/index.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "node api/index.js",
    "dev:frontend": "cd frontend-main && npm run dev",
    "install-all": "npm install && cd backend && npm install && cd ../frontend-main && npm install",
    "vercel-build": "cd frontend-main && npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["support", "survivor", "help", "full-stack", "vercel"],
  "author": "Survivor Support Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
