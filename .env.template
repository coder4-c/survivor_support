# BACKEND CONFIGURATION (backend/.env)
# ================================================

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
# For local development (comment out if using Atlas)
MONGODB_URI=mongodb://localhost:27017/salama

# For MongoDB Atlas (uncomment and configure if using Atlas)
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/salama

# JWT Configuration
# ‚ö†Ô∏è Generate a new 512-bit secret for production
JWT_SECRET=<generate-new-jwt-secret>
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# ‚ö†Ô∏è Generate a new 256-bit session secret for production
SESSION_SECRET=<generate-new-session-secret>
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration
# Use a dedicated email service with app-specific passwords
EMAIL_SERVICE=gmail
EMAIL_USER=<your-service-account-email>
EMAIL_PASSWORD=<your-app-specific-password>
EMAIL_FROM=safe-circle@yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Encryption Configuration (for evidence files)
# ‚ö†Ô∏è Generate a new 256-bit encryption key for production
ENCRYPTION_KEY=<generate-new-encryption-key>
EVIDENCE_ENCRYPTION_ALGO=aes-256-cbc

# Emergency Configuration
EMERGENCY_HOTLINE=<your-emergency-hotline>
CRISIS_HOTLINE=<your-crisis-hotline>
ADMIN_EMAIL=admin@safecircle.org

